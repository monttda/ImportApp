%div{role: "tabpanel"}
  %ul.nav.navbar-inverse.nav-tabs{role: "tablist", id: "#navTab"}
    %li.active{  role: "presentation"}
      %a{id: 'homeUrl' ,"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"}=t('home')
    %li{role: "presentation"}
      %a{id: 'companiesUrl' ,"aria-controls" => "companies", "data-toggle" => "tab", :href => "#companies", :role => "tab"}= t('companies.companies')
    %li{role: "presentation"}
      %a{id: 'importUrl' ,"aria-controls" => "home", "data-toggle" => "tab", :href => "#import", :role => "tab"}= t('operations.import.title')
  .tab-content
    #home.tab-pane.active{:role => "tabpanel"}
      %h2.col-xs-6= t('welcome')
    #companies.tab-pane{:role => "tabpanel"}
    #import.tab-pane{:role => "tabpanel"}
      = render "operations/operations_file_uploader"
- content_for(:page_javascript) do

  :coffeescript
    $(document).ready ->
      $('#companiesUrl').one 'click', (e) ->
        e.preventDefault
        $.get "/companies"

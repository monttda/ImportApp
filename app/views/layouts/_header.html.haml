%div{role: "tabpanel"}
  %ul.nav.navbar-inverse.nav-tabs{role: "tablist", id: "#navTab"}
    %li.active{  role: "presentation"}
      %a{id: 'homeUrl' ,"aria-controls" => "home", "data-toggle" => "tab", :href => "#home", :role => "tab"} Home
    %li{role: "presentation"}
      %a{id: 'companiesUrl' ,"aria-controls" => "companies", "data-toggle" => "tab", :href => "#companies", :role => "tab"} Companies
    %li{role: "presentation"}
      %a{id: 'importUrl' ,"aria-controls" => "home", "data-toggle" => "tab", :href => "#import", :role => "tab"} Import operations
  .tab-content
    #home.tab-pane.active{:role => "tabpanel"}
      %h2.col-xs-6 Welcome to the Import App where You can see the companies operations, filter them and add import and export the operations!
    #companies.tab-pane{:role => "tabpanel"}
    #import.tab-pane{:role => "tabpanel"}

- content_for(:page_javascript) do

  :coffeescript
    $(document).ready ->
      $('#companiesUrl').one 'click', (e) ->
        e.preventDefault
        $.get "/companies"
      $('#importUrl').one 'click', (e) ->
        e.preventDefault
        $.get "operations/import"
